// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Post {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    content   String   @db.VarChar(255)
    authorId  String

    @@index([authorId])
}

model User {
    userId String @id @default(cuid())
}

model DiceRoller {
    rollerId    String @id @default(cuid())
    userId      String
    label       String
    indexInUser Int
}

model DiceGroup {
    groupId       String  @id @default(cuid())
    rollerId      String
    indexInRoller Int
    dice          Int
    sides         Int
    option        String
    X             Int
    isPositive    Boolean
}
